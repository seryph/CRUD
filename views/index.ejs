	</div>
	<div class="row">
		<div class="col s12">
		  <div class="row">
			<div class="input-field col s12">
			  <form action="/add_comment" method="post">
				<input type="text" name="add_comment" id="add_comment" class="autocomplete">
				<label for="add_comment">Autocomplete</label>
			</div>
		  </div>
		</div>
	  </div>
	  <button class="btn waves-effect waves-light right-align" type="submit" name="action">Add Comment
		<i class="material-icons right">send</i>
	  </button>
	</form>
</div>
<br>
<br>


<!-- Comments -->


<ul class="collection with-header">
	<li class="collection-header"><h4>Comments</h4></li>


	<% if (typeof comments !== 'undefined') { %>

		<% comments.forEach(function(comment) { %>

			<li class="collection-item avatar">
			 	<div>
					<i class="material-icons circle">folder</i>
					<span class="title">What Is The Question?</span>
					<p><%= comment.text %></p>

					<div class="edit_comment_div">
						<p class="edit_button underline">
							Edit
						</p> 
						<div class="row hide">
							<form method="POST" action="/edit-product" class="col s12">
							<div class="row">
								<div class="input-field col s6">
								<i class="material-icons prefix">edit</i>
								<input id="icon_prefix" type="text" name="edited_comment" class="validate">
								<input type="hidden" value="<%= comment._id %>" name="edit_comment_id">
								<label for="icon_prefix">Edit Comment</label>
								</div>
							</div>
							<button class="btn waves-effect waves-light" type="submit" name="action">Submit
								<i class="material-icons right">send</i>
							</button>
							</form>
						</div>
					  </div>

					<a id="delete_link" class="secondary-content">
						<form method="post" action="/delete_comment">
							<input type="hidden" value="<%= comment._id %>" name="comment_id">
							<button class="btn waves-effect waves-light right-align" type="submit" name="action"> Delete
								<i class="material-icons right">delete</i>
							</button>
						</form>
					</a>
				</div>
			</li>

		<% }); %>


	<% } else { %>
		

	<% } %>

</ul>







<%- include('includes/footer.ejs'); %>